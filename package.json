{
  "name": "build-test-merge-publish",
  "version": "0.0.22",
  "description": "GitHub Actions workflow to build, test, merge, and publish npm packages",
  "main": "dist/main.js",
  "scripts": {
    "lint": "tsc --noEmit && eslint --ext '.ts' --ext '.js' .",
    "pretest": "npm run lint",
    "test": "echo 'No tests yet'",
    "codegen": "graphql-codegen --config codegen.yml",
    "precompile": "rm -rf dist && npm run codegen",
    "compile": "webpack-cli --config=webpack.config.js",
    "dependabump": "ncu -u && rm -rf package-lock.json node_modules | true && npm i",
    "prerelease": "npm run compile",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbeesley/build-test-merge-publish.git"
  },
  "keywords": [
    "github",
    "actions",
    "build",
    "merge",
    "publish",
    "test"
  ],
  "author": "Bill Beesley <bill@beesley.dev>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bbeesley/build-test-merge-publish/issues"
  },
  "homepage": "https://github.com/bbeesley/build-test-merge-publish#readme",
  "dependencies": {},
  "devDependencies": {
    "@actions/cache": "^1.0.7",
    "@actions/core": "^1.5.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "@octokit/graphql-schema": "^10.67.0",
    "@octokit/webhooks-definitions": "^3.67.3",
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@graphql-codegen/cli": "^2.1.1",
    "@graphql-codegen/typescript": "^2.1.2",
    "@graphql-codegen/typescript-document-nodes": "^2.1.2",
    "@graphql-codegen/typescript-operations": "^2.1.1",
    "@graphql-codegen/typescript-resolvers": "^2.1.2",
    "@babel/node": "^7.14.9",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-stage-0": "^7.8.3",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "cache-loader": "^4.1.0",
    "conventional-changelog-angular": "^5.0.12",
    "cz-conventional-changelog": "^3.3.0",
    "documentation": "^13.2.5",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "npm-check-updates": "^11.8.3",
    "prettier": "^2.3.2",
    "semantic-release": "^17.4.6",
    "typescript": "^4.3.5",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "scope": "deps*",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md",
            "README.md",
            "dist/**",
            "src/generated/graphql.ts"
          ]
        }
      ]
    ]
  }
}
